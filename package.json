{
  "name": "rizkicitra.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3222",
    "build": "pnpm db:generate && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "commit": "cz",
    "type-check": "tsc --noEmit",
    "content:build": "contentlayer build",
    "db:migrate": "prisma migrate dev --schema=./db/schema.prisma",
    "db:reset": "prisma migrate reset --schema=./db/schema.prisma",
    "db:push": "prisma db push --schema=db/schema.prisma",
    "db:pull": "prisma db pull --schema=db/schema.prisma",
    "db:generate": "prisma generate --schema=./db/schema.prisma"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@icons-pack/react-simple-icons": "^8.0.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.2.0",
    "@tanstack/react-query": "^4.33.0",
    "@tiptap/extension-character-count": "^2.1.7",
    "@tiptap/extension-code-block-lowlight": "^2.1.7",
    "@tiptap/extension-placeholder": "^2.1.7",
    "@tiptap/extension-underline": "^2.1.7",
    "@tiptap/pm": "^2.1.7",
    "@tiptap/react": "^2.1.11",
    "@tiptap/starter-kit": "^2.1.11",
    "axios": "^1.4.0",
    "canvas-confetti": "^1.6.0",
    "class-variance-authority": "^0.6.1",
    "cloudinary-build-url": "^0.2.4",
    "clsx": "^1.2.1",
    "contentlayer": "^0.3.4",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.1",
    "htmr": "^1.0.2",
    "ioredis": "^5.3.2",
    "jotai": "^2.4.0",
    "lucide-react": "^0.268.0",
    "nanoid": "^4.0.2",
    "next": "13.5.2",
    "next-auth": "4.23.1",
    "next-contentlayer": "^0.3.4",
    "next-themes": "^0.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-tooltip": "^5.21.1",
    "reading-time": "^1.5.0",
    "rehype-pretty-code": "^0.10.0",
    "rss": "^1.2.2",
    "server-only": "^0.0.1",
    "shiki": "^0.14.3",
    "tailwind-merge": "^1.14.0",
    "ts-pattern": "^5.0.5"
  },
  "devDependencies": {
    "@cld-apis/types": "^0.1.6",
    "@tailwindcss/typography": "^0.5.9",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/canvas-confetti": "^1.6.0",
    "@types/node": "20.2.5",
    "@types/react": "18.2.8",
    "@types/react-dom": "18.2.4",
    "@types/rss": "^0.0.30",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "10.4.14",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.41.0",
    "eslint-config-next": "13.4.4",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "postcss": "8.4.24",
    "prettier": "^2.8.8",
    "prisma": "^5.2.0",
    "remark-gfm": "^3.0.1",
    "tailwindcss": "3.3.2",
    "typescript": "5.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": "eslint",
    "**/*.{js,jsx,ts,tsx,mdx,md,css}": [
      "prettier --config ./.prettierrc.js \"./src/**/*.{js,jsx,ts,tsx,mdx,md,css}\""
    ]
  },
  "browserslist": {
    "production": [
      ">0.01%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      ">0.01%",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
