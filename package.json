{
  "name": "rizkicitra",
  "version": "1.0.0",
  "private": true,
  "description": "My Personal Website, build with React, Next.js, MDX and Tailwind CSS",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p 5000",
    "cache-clean": "rm -rf ./.next",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "postinstall": "husky install",
    "type-check": "tsc --noEmit",
    "postbuild": "next-sitemap --config next-sitemap.js",
    "format": "prettier -c \"./.prettierrc.js\" -w",
    "commit": "cz"
  },
  "dependencies": {
    "@giscus/react": "^2.2.8",
    "@headlessui/react": "^1.7.12",
    "@supabase/supabase-js": "^2.10.0",
    "@tailwindcss/typography": "^0.5.9",
    "@vercel/og": "^0.2.0",
    "axios": "^1.3.4",
    "clsx": "^1.2.1",
    "framer-motion": "^10.0.1",
    "htmr": "^1.0.2",
    "isomorphic-fetch": "^3.0.0",
    "jotai": "^2.0.2",
    "mdx-prism": "^0.3.4",
    "next": "^13.2.3",
    "next-mdx-remote": "^4.4.1",
    "next-pwa": "^5.6.0",
    "next-seo": "^6.0.0",
    "next-themes": "^0.2.1",
    "prism-themes": "^1.9.0",
    "react": "^18.2.0",
    "react-18-image-lightbox": "^5.1.4",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.0",
    "react-icons": "^4.7.1",
    "slugify": "^1.6.5",
    "tailwind-merge": "^1.10.0"
  },
  "devDependencies": {
    "@next/env": "^13.2.3",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/node": "^18.14.4",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "autoprefixer": "^10.4.13",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.35.0",
    "eslint-config-next": "^13.2.3",
    "gray-matter": "^4.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "next-sitemap": "^3.1.55",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "reading-time": "^1.5.0",
    "rehype-slug": "^5.1.0",
    "tailwindcss": "^3.2.7",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rizkimcitra/rizkicitra.git"
  },
  "author": "Rizki Maulana Citra",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rizkimcitra/rizkicitra/issues"
  },
  "homepage": "https://github.com/rizkimcitra/rizkicitra#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,mdx,md,css}": [
      "yarn format \"./src/**/*.{js,jsx,ts,tsx,mdx,md,css}\""
    ]
  },
  "browserslist": {
    "production": [
      ">0.01%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      ">0.01%",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
