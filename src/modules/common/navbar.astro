---
import { Link } from '@/components/ui/link';
import { cn } from '@/lib/utils';
import NavbarLinkItem from './navbar-link-item.astro';

let menu = [
  { text: 'Home', href: '/', title: 'Homepage' },
  { text: 'Writings', href: '/writings', title: 'Writings' },
];
---

<header
  class={cn(
    'fixed top-0 inset-x-0 z-50 h-16 bg-neutral-950',
    'supports-[backdrop-filter:blur(1px)]:backdrop-blur',
    'supports-[backdrop-filter:blur(1px)]:bg-neutral-950/50',
  )}
>
  <div class='max-w-5xl mx-auto w-11/12 h-full flex items-center'>
    <a
      href='/'
      title='Homepage'
      class='font-semibold text-lg text-transparent bg-gradient-to-b bg-clip-text from-neutral-100 to-neutral-600'
    >
      rimzzlabs.com
    </a>

    <nav class='ml-auto inline-flex items-center gap-x-2'>
      {menu.map((args) => <NavbarLinkItem {...args} />)}
    </nav>
  </div>
</header>
